<h1 class="text-center text-capitalize">Список туров</h1>
{{#each vacations}}
    <div class="vacation card">
        <div class="card-body">
        <h3>{{name}}</h3>
        <p>{{description}}</p>
        {{#if inSeason}}
            <span class="price card-link">{{price}}</span>
            <a href="/cart/add?sku={{sku}}" class="btn btn-success btn-sm card-link">Заказать</a>
        {{else}}
        <span class="outOfSeason card-link">К сожалению, сейчас не сезон этого тура.</span>
            {{! The "notify me when this vacation is in season"
                page will be our next task. }}
            <a href="/notify-me-when-in-season?sku={{sku}}" class="card-link">Уведомить меня, когда настанет сезон этого тура.</a>
        {{/if}}
        </div>
    </div>
    <br>
{{/each}}
<p>Currency:
    <a href="/set-currency/USD" class="currency {{currencyUSD}}">USD</a> |
    <a href="/set-currency/GBP" class="currency {{currencyGBP}}">GBP</a> |
    <a href="/set-currency/BTC" class="currency {{currencyBTC}}">BTC</a>
</p>