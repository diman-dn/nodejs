<h1>Запрос цены для групп</h1>
    <form class="form-horizontal" method="post">
        <input type="hidden" name="referrer">
        <div class="form-group">
            <label for="fieldName" class="col-2 control-label">Название: </label>
            <div class="col-4">
                <input type="text" id="fieldName" name="name" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label for="groupSize" class="col-2 control-label">Размер группы: </label>
            <div class="col-4">
                <input type="text" name="groupSize" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-2 control-label">Электронная почта: </label>
            <div class="col-4">
                <input type="email" name="email" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-offset-2 col-4">
                <input type="submit" name="submit" class="btn btn-primary" value="Отправить">
            </div>
        </div>
    </form>
{{#section 'jquery'}}
    <script>
        $(document).ready(function () {
            $('input[name="referrer"]').val(document.referrer);
        });
    </script>
{{/section}}