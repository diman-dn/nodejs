<h2>{{title}}</h2>
<form class="horizontal-form" role="form" method="post" action="/login">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <div class="form-group">
        <label for="fieldName" class="col-2 control-label">Имя пользователя:</label>
        <div class="col-4">
            <input type="text" class="form-control" id="fieldName" name="username" required>
        </div>
    </div>
    <div class="form-group">
        <label for="fieldPass" class="col-2 control-label">Пароль:</label>
        <div class="col-4">
            <input type="password" class="form-control" id="fieldPass" name="pswd" required>
        </div>
    </div>
    <div class="form-group">
        <div class="col-offset-2 col-4">
            <input type="submit" class="btn btn-primary" name="login" value="Войти">
        </div>
    </div>
</form>